<UserControl x:Class="BussinessSolution.UserControls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Name="UC" >
    <Grid Cursor="Hand" Width="{Binding ElementName=UC, Path=ImageWidth}" Height="{Binding ElementName=UC, Path=ImageHeight}">
        <Button Style="{DynamicResource NoChromeButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=UC, Path=Image}"   />
               
            </StackPanel>
        </Button>     
    </Grid>
</UserControl>
